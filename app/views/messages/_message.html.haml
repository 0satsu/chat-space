.chat__bottom__message{data: {id: "#{message.id}", group_id: "#{message.group_id}"}} 
  .chat__bottom__message_info
    .chat__bottom__message__info__user
      %p=  message.user.name
    .chat__bottom__message__info__date
      %p= message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat__bottom__message__content
    - if message.content.present?
      %p.chat__bottom__message__text
        = message.content
    = image_tag message.image, size:250, class: 'hat__bottom__message__image' if message.image.present?